{
  "name": "arcforge",
  "version": "1.1.1",
  "description": "Skill-based autonomous agent pipeline for Claude Code, Codex, Gemini CLI, and OpenCode",
  "license": "MIT",
  "author": {
    "name": "Gregory Ho"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GregoryHo/arcforge.git"
  },
  "bin": {
    "arcforge": "scripts/cli.js"
  },
  "files": [
    "skills/",
    "hooks/",
    "scripts/",
    "templates/",
    "commands/",
    ".claude-plugin/",
    ".codex/",
    ".gemini/",
    ".opencode/",
    "LICENSE",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "test": "npm run test:scripts && npm run test:hooks && npm run test:node && npm run test:skills",
    "test:scripts": "jest",
    "test:hooks": "cd hooks && npm test",
    "test:node": "node tests/node/run-tests.js",
    "test:skills": "python3 -m pytest tests/skills/ -v",
    "test:diary": "node skills/arc-journaling/scripts/diary.js",
    "test:reflect": "node skills/arc-reflecting/scripts/reflect.js",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format ."
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "jest": "^29.7.0"
  }
}
